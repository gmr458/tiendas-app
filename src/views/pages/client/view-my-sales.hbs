<div class="container p-4">
    <div class="row mb-3">
        <div class="col">
            <div class="card rounded-3">
                <div class="card-header">
                    <h2 class="text-center">Tus Pedidos</h2>
                </div>
                <div class="card-body">
                    <table class="table table-hover m-0 text-center">
                        <thead>
                            <th scope="col">Tienda</th>
                            <th scope="col">Precio total</th>
                            <th scope="col">Status</th>
                            <th scope="col">Fecha de creación</th>
                            <th scope="col">Ver más detalles</th>
                        </thead>
                        <tbody id="rows">
                            {{!-- {{#each sales}}
                                <tr>
                                    <td>{{store_name}}</td>
                                    <td>${{total_price}}</td>
                                    <td>{{status}}</td>
                                    <td>${{created_at}}</td>
                                </tr>
                            {{else}}
                                <tr>
                                    <td colspan="4">
                                        <h2>No hay pedidos</h2>
                                    </td>
                                </tr>
                            {{/each}} --}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-5 col-md-6 col-sm-8 col-8 mx-auto">
            {{> messages }}
        </div>
    </div>
</div>

<script src="/js/view-my-sales.js"></script>