<div class="container p-4">
    <div class="row mb-3">
        <div class="col">
            <div class="card rounded-3">
                <div class="card-header">
                    <h2 class="text-center">Mi Pedido</h2>
                    <h4 class="text-center">Precio total pedido ${{mySale.total_price}}</h4>
                </div>
                <div class="card-body">
                    <table class="table table-hover m-0 text-center">
                        <thead>
                            <th scope="col">Nombre</th>
                            <th scope="col">Precio unitario</th>
                            <th scope="col">Cantidad</th>
                            <th scope="col">Precio total</th>
                        </thead>
                        <tbody>
                            {{#each products}}
                                <tr>
                                    <td>{{name}}</td>
                                    <td>${{unitPrice}}</td>
                                    <td>{{quantity}}</td>
                                    <td>${{totalPrice}}</td>
                                </tr>
                            {{else}}
                                <tr>
                                    <td colspan="4">
                                        <h2>No hay productos</h2>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-5 col-md-6 col-sm-8 col-8 mx-auto">
            {{> messages }}
        </div>
    </div>
</div>
