<div class="container p-4">
    <div class="row">
        {{#each sales}}
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card text-center m-auto" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-text">Precio total: ${{total_price}}</h5>
                        <p class="card-text estado">Estado: {{state}}</p>
                        <a href="/view-details-sale/{{id}}">
                            <button class="btn btn-primary">Ver detalles</button>
                        </a>
                    </div>
                </div>
            </div>
        {{else}}
            <h2>No hay pedidos</h2>
        {{/each}}
    </div>
</div>

<script>
    const states = document.getElementsByClassName('estado');
    for (let state of states) {
        if (state.textContent === "Estado: 0") {
            state.textContent = "Estado: Pendiente";
        } else {
            state.textContent = "Estado: Aceptado";
        }
    }
</script>

<script src="/js/show-sales.js"></script>