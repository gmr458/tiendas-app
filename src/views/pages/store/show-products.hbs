<div class="container p-4">
    <div class="card rounded-3">
        <div class="card-header">
            <h2 class="text-center">Productos</h2>
        </div>
        <div class="card-body">
            <table class="table table-hover m-0 text-center">
                <thead>
                    <th style="width: 20%;" scope="col">Nombre</th>
                    <th style="width: 20%;" scope="col">Descripci√≥n</th>
                    <th style="width: 20%;" scope="col">Precio</th>
                    <th style="width: 20%;" scope="col">Cantidad</th>
                    <th style="width: 20%;" scope="col">Operaciones</th>
                </thead>
                <tbody>
                    {{#each products}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{description}}</td>
                            <td>${{price}}</td>
                            <td>{{stock}}</td>
                            <td>
                                <div class="row">
                                    <div class="col">
                                        <a href="/edit-product-form/{{id}}">
                                            <button class="btn btn-primary">
                                                <i class="bi bi-pencil-square"></i>
                                            </button>
                                        </a>
                                    </div>
                                    <div class="col">
                                        <form action="/delete-product/{{id}}" method="post" class="my-auto">
                                            <button class="btn btn-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {{else}}
                        <tr>
                            <td colspan="4">No hay productos</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>