<div class="container p-4">
    <div class="row mb-3">
        <div class="col">
            <div class="card rounded-3">
                <div class="card-header">
                    <h2 class="text-center">Productos</h2>
                </div>
                <div class="card-body">
                    <table class="table table-hover m-0 text-center">
                        <thead>
                            <th style="width: 20%;" scope="col">Nombre</th>
                            <th style="width: 20%;" scope="col">Descripción</th>
                            <th style="width: 20%;" scope="col">Precio</th>
                            <th style="width: 20%;" scope="col">Cantidad</th>
                            <th style="width: 20%;" scope="col">Operaciones</th>
                        </thead>
                        <tbody>
                            {{#each products}}
                                <tr>
                                    <td>{{name}}</td>
                                    <td>{{description}}</td>
                                    <td>${{price}}</td>
                                    <td>{{stock}}</td>
                                    <td>
                                        <div class="row">
                                            <div class="col">
                                                <a href="/edit-product-form/{{id}}">
                                                    <button class="btn btn-primary" >
                                                        <i class="bi bi-pencil-square"></i>
                                                    </button>
                                                </a>
                                            </div>
                                            <div class="col">
                                                <form action="/delete-product/{{id}}" method="post" class="my-auto" onsubmit="return confirm('¿Estas seguro que quires eliminar este producto?');">
                                                    <button class="btn btn-danger">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {{else}}
                                <tr>
                                    <td colspan="5">
                                        <h2>No hay productos</h2>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-5 col-md-6 col-sm-8 col-8 mx-auto">
            {{> messages }}
        </div>
    </div>
</div>

<script src="/js/show-products.js"></script>